@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<h1>@(ViewBag.SelectedTeam != null ? ViewBag.SelectedTeam : "Bowlers")</h1>
@*<h1>Bowlers</h1>*@

<ul>
    @foreach (var b in Model)
    {
        <li>@b.BowlerFirstName @b.BowlerMiddleInit @b.BowlerLastName |
            @b.BowlerAddress @b.BowlerCity, @b.BowlerState @b.BowlerZip |
            @b.BowlerPhoneNumber |
            <a asp-controller="Home" asp-action="Edit" asp-route-bowlerid="@b.BowlerID" class="btn btn-info">Edit</a>
            <a asp-controller="Home" asp-action="Delete" asp-route-bowlerid="@b.BowlerID" class="btn btn-danger">Delete</a>
        </li>
    }
</ul>
<br />
<a asp-controller="Home" asp-action="Create" class="btn btn-info">Add Bowler</a>